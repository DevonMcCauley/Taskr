<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="375.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TaskScreenController">
   <children>
      <Label fx:id="lblTitle" layoutX="145.0" layoutY="14.0" text="Taskr">
         <font>
            <Font size="37.0" />
         </font>
      </Label>
      <Button fx:id="btnAddTask" layoutX="34.0" layoutY="68.0" mnemonicParsing="false" onAction="#AddTask" text="Add Task" />
      <TableView fx:id="tblTasks" layoutX="23.0" layoutY="100.0" prefHeight="264.0" prefWidth="334.0">
        <columns>
          <TableColumn fx:id="colTaskName" prefWidth="112.0" resizable="false" text="Task Name" />
            <TableColumn fx:id="colTaskDescription" prefWidth="221.0" resizable="false" text="Description" />
        </columns>
      </TableView>
      <Button fx:id="btnDeleteTask" layoutX="113.0" layoutY="68.0" mnemonicParsing="false" onAction="#DeleteTask" onMouseClicked="#AddTask" text="Delete Task" />
   </children>
</AnchorPane>
